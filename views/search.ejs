<%if (templateData.articles.length) { %>
<ul>
<% templateData.articles.forEach(function(article) { %>
    <li>
            <a href="<%= templateData.baseUrl %><%= article.categ_url %>/<%= article.url %>/"><%= article.title %></a>
            <br/><i><%= article.DESCRIPTION %></i>
    </li>
<% }); %>
</ul>
<% } else { %>
    <%- templateData.translator.translate('There is no result matching your criteria.') %>
<% } %>
